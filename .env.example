# ============================================================
# Trading Bot — Environment Variables
# Copy this file to .env and fill in your values.
# ============================================================

# LLM APIs
ANTHROPIC_API_KEY=sk-ant-...
MINIMAX_API_KEY=sk-cp-...
MINIMAX_BASE_URL=https://api.minimax.io/v1

# Data sources
# NewsAPI — free tier at https://newsapi.org (1000 req/day)
NEWS_API_KEY=

# Financial Modeling Prep — free tier at https://financialmodelingprep.com (250 req/day)
FMP_API_KEY=

# Broker — Live account (real money, conservative strategy)
T212_API_KEY=
T212_API_SECRET=

# Broker — Practice / Demo account (aggressive strategy)
T212_PRACTICE_API_KEY=
T212_PRACTICE_API_SECRET=
PRACTICE_DAILY_BUDGET_EUR=500.0

# Trading
DAILY_BUDGET_EUR=10.0
MAX_CANDIDATES=15

# Stock variety — tickers bought are blacklisted for this many days
RECENTLY_TRADED_DAYS=3

# EU soft preference — 0.1 = 10% scoring bonus for EU-listed stocks (no hard filter)
# EU_PREFERENCE_BONUS=0.1

# Orchestration
ORCHESTRATOR_TIMEZONE=Europe/Berlin
SCHEDULER_COLLECT_TIMES=08:00,12:00,16:30
SCHEDULER_EXECUTE_TIME=17:10
SCHEDULER_EOD_TIME=17:35

# Telegram (optional)
TELEGRAM_ENABLED=false
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# Sell automation
SELL_STOP_LOSS_PCT=10.0
SELL_TAKE_PROFIT_PCT=15.0
SELL_MAX_HOLD_DAYS=5
SELL_CHECK_SCHEDULE=09:30,12:30,16:45

# Model overrides (defaults are fine, only change if needed)
# CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001
# CLAUDE_SONNET_MODEL=claude-sonnet-4-6
# CLAUDE_OPUS_MODEL=claude-opus-4-6
# MINIMAX_MODEL=MiniMax-M2.5
# MAX_TOOL_ROUNDS=10
# PIPELINE_TIMEOUT_SECONDS=900
